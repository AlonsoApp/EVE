<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <View
        android:id="@+id/viewArastradorElemento"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_drawer"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/textViewElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/viewArastradorElemento"
        android:textSize="20sp"
        android:textColor="#303030"
        android:text="@string/elemento_sin_titulo"/>


    <ImageButton
        android:id="@+id/imgBtnDeleteElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_action_remove"/>

</RelativeLayout>